#!/usr/bin/env ruby
require 'pathname'

$LOAD_PATH.unshift Pathname.new(__dir__).join('../lib')

require 'pry'
require 'irb'
require 'rails'
require 'irb/completion'

require 'rails-graphql'

class ApplicationSchema < GraphQL::Schema
end

class GraphQL::SampleObject < GraphQL::Object
  desc 'Test of an object with a directive'

  field :old_name, :string, null: false do
    use :deprecated, reason: 'Testing directive events'
  end
end

ARGV.clear
IRB.start
